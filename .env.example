# Environment configuration for Agentic Framework
# Copy this to .env and fill in your actual values

# OpenAI API
OPENAI_API_KEY=sk_xxxxxxxxxxxxx

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# RAG Configuration
RAG_VECTOR_STORE=chromadb
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_RETRIEVED_DOCS=5

# Pinecone Configuration (optional)
# PINECONE_API_KEY=xxxxx
# PINECONE_ENV=us-west-2-aws
# RAG_PINECONE_INDEX=agentic-framework

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_MAX_RETRIES=3
AGENT_ENABLE_SELF_CORRECTION=true
AGENT_ENABLE_REFLECTION=true

# MCP Configuration
MCP_ENABLED=true
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8001
MCP_DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
